<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mclerrani.ikaizen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ItemDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".KaizenDetailsActivity"
            android:label="@string/title_activity_kaizen_details"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- launch activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--android:parentActivityName=".ItemDetailsActivity"-->
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <!--meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mclerrani.ikaizen.ItemDetailsActivity" /-->
        </activity>

        <activity
            android:name=".KaizenEditActivity"
            android:label="@string/title_activity_kaizen_edit"
            android:parentActivityName=".KaizenDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="KaizenDetailsActivity" />
        </activity>
    </application>

</manifest>
