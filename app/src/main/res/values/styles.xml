<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BackgroundShadowBottom">
        <item name="android:background">@drawable/background_shadow_bottom</item>
    </style>

    <style name="BackgroundShadowTop">
        <item name="android:background">@drawable/background_shadow_top</item>
    </style>

    <style name="BackgroundShadowTopBottom">
        <item name="android:background">@drawable/background_shadow_top_bottom</item>
    </style>

    <style name="TealFiftyShadowBottom">
        <item name="android:background">@drawable/teal_fifty_shadow_bottom</item>
    </style>

    <style name="ButtonBarColoredShadowTop">
        <item name="android:background">@drawable/buttonbar_colored_shadow_top</item>
    </style>

</resources>
