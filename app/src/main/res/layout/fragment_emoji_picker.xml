<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mclerrani.ikaizen.EmojiPickerActivityFragment"
    tools:showIn="@layout/activity_emoji_picker">


    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grdEmojiPicker"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:choiceMode="singleChoice"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/grid_view_spacing"
        android:horizontalSpacing="@dimen/grid_view_spacing"
        android:columnWidth="@dimen/grid_view_entry_size"
        android:stretchMode="columnWidth"
        android:clipToPadding="false"/>
    <!--android:layout_height="?android:attr/listPreferredItemHeight"-->
</RelativeLayout>
